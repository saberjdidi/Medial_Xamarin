                    </StackLayout>
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280" />
                            <ColumnDefinition Width="25" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            Text="{i18n:Translate PurchaseCost}"
                            TextColor="#118AB2" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>
                            <inputLayout:SfTextInputLayout
                                Grid.Column="0"
                                Margin="0,-10,0,0"
                                ContainerBackgroundColor="#E6EEF9"
                                ContainerType="Outlined"
                                FocusedColor="#0450C2"
                                Hint="{i18n:Translate Value}"
                                OutlineCornerRadius="20"
                                UnfocusedColor="#28BAAE">
                                <local:RoundedEntry
                                    Grid.Column="0"
                                    Keyboard="Telephone"
                                    Placeholder="Value"
                                    Text="{Binding Product.purchaseCost.value, Mode=TwoWay}"
                                    TextColor="Black"
                                    WidthRequest="500" />
                            </inputLayout:SfTextInputLayout>
                            <inputLayout:SfTextInputLayout
                                Grid.Column="1"
                                Margin="0,-10,0,0"
                                ContainerBackgroundColor="#E6EEF9"
                                ContainerType="Outlined"
                                FocusedColor="#0450C2"
                                Hint="{i18n:Translate Currency}"
                                OutlineCornerRadius="20"
                                UnfocusedColor="#28BAAE">
                                <autocomplete:SfAutoComplete
                                    x:Name="PurchaseCostEntry"
                                    BorderColor="Blue"
                                    DataSource="{Binding CurrencyAutoComplete}"
                                    DisplayMemberPath="entity"
                                    HeightRequest="50"
                                    HorizontalOptions="CenterAndExpand"
                                    NoResultsFoundFontAttributes="Bold"
                                    NoResultsFoundFontSize="16"
                                    NoResultsFoundText="{i18n:Translate NoResult}"
                                    NoResultsFoundTextColor="DarkGreen"
                                    SelectedItem="{Binding Product.purchaseCost.currency}"
                                    SuggestionMode="StartsWith"
                                    TextColor="Black"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="210" />
                            </inputLayout:SfTextInputLayout>
                        </Grid>
                        <Label
                            Grid.Row="2"
                            Margin="0,-15,0,0"
                            FontSize="Small"
                            HorizontalTextAlignment="Center"
                            IsVisible="False"
                            Text="PurchaseCost is Required"
                            TextColor="OrangeRed"
                            WidthRequest="210">
                            <Label.Triggers>
                                <MultiTrigger TargetType="Label">
                                    <MultiTrigger.Conditions>
                                        <BindingCondition Binding="{Binding Source={x:Reference PurchaseCostEntry}, Path=Text, Converter={StaticResource NotNullOrEmptyStringConverter}}" Value="False" />
                                    </MultiTrigger.Conditions>
                                    <Setter Property="IsVisible" Value="{Binding Value}" />
                                </MultiTrigger>
                            </Label.Triggers>
                        </Label>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <inputLayout:SfTextInputLayout
                                Grid.Column="0"
                                Margin="0,-5,0,0"
                                ContainerBackgroundColor="#E6EEF9"
                                ContainerType="Outlined"
                                FocusedColor="#0450C2"
                                Hint="{i18n:Translate UpdateCostDate}"
                                OutlineCornerRadius="20"
                                UnfocusedColor="#28BAAE">
                                <DatePicker
                                    Date="{Binding Product.updateCostDate}"
                                    Format="yyyy-MM-dd"
                                    WidthRequest="270" />
                            </inputLayout:SfTextInputLayout>
                            <inputLayout:SfTextInputLayout
                                Grid.Column="1"
                                Margin="0,-5,0,0"
                                ContainerBackgroundColor="#E6EEF9"
                                ContainerType="Outlined"
                                FocusedColor="#0450C2"
                                Hint="{i18n:Translate Change}"
                                OutlineCornerRadius="20"
                                UnfocusedColor="#28BAAE">
                                <local:RoundedEntry
                                    x:Name="ChangeEntry"
                                    Keyboard="Telephone"
                                    Placeholder="Change"
                                    Text="{Binding Product.costChange, Mode=TwoWay}"
                                    TextColor="Black"
                                    WidthRequest="500" />
                            </inputLayout:SfTextInputLayout>
                        </Grid>
                        <Label
                            Grid.Row="4"
                            Margin="0,-15,0,0"
                            FontSize="Small"
                            HorizontalTextAlignment="Center"
                            IsVisible="False"
                            Text="Change is Required"
                            TextColor="OrangeRed"
                            WidthRequest="210">
                            <Label.Triggers>
                                <MultiTrigger TargetType="Label">
                                    <MultiTrigger.Conditions>
                                        <BindingCondition Binding="{Binding Source={x:Reference ChangeEntry}, Path=Text, Converter={StaticResource NotNullOrEmptyStringConverter}}" Value="False" />
                                    </MultiTrigger.Conditions>
                                    <Setter Property="IsVisible" Value="{Binding Value}" />
                                </MultiTrigger>
                            </Label.Triggers>
                        </Label>
                        <inputLayout:SfTextInputLayout
                            Grid.Row="5"
                            Margin="0,-10,0,0"
                            ContainerBackgroundColor="#E6EEF9"
                            ContainerType="Outlined"
                            FocusedColor="#0450C2"
                            Hint="{i18n:Translate PackagingCost}"
                            OutlineCornerRadius="20"
                            UnfocusedColor="#28BAAE">
                            <local:RoundedEntry
                                Keyboard="Telephone"
                                Placeholder="Packaging Cost"
                                Text="{Binding Product.packagingCost.value, Mode=TwoWay}"
                                TextColor="Black"
                                WidthRequest="500" />
                        </inputLayout:SfTextInputLayout>
