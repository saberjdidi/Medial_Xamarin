    <MasterDetailPage.Resources>
        <ResourceDictionary>
            <custom:SelectedToColorConverter x:Key="ColorConverter" />
        </ResourceDictionary>
    </MasterDetailPage.Resources>
    <MasterDetailPage.Master>
        <ContentPage Title="master">
            <RelativeLayout>
                <Image
                    Aspect="AspectFill"
                    BackgroundColor="#0E74A0"
                    RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                           Property=Height}"
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                          Property=Width}"
                    Source="photo2" />
                <Grid RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackLayout
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="5"
                        HeightRequest="140"
                        Orientation="Vertical">
                        <Image
                            HeightRequest="80"
                            HorizontalOptions="FillAndExpand"
                            Source="logo.png"
                            VerticalOptions="FillAndExpand"
                            WidthRequest="380" />
                        <StackLayout
                            HorizontalOptions="CenterAndExpand"
                            Orientation="Horizontal"
                            Spacing="2"
                            VerticalOptions="Center">
                            <Label
                                Margin="10,0,0,0"
                                FontAttributes="Bold"
                                FontSize="Large"
                                Text="{Binding User.username}"
                                TextColor="#252627"
                                VerticalOptions="Center" />
                            <Label
                                Margin="2,0,0,0"
                                FontAttributes="Bold"
                                FontSize="Large"
                                Text="{Binding User.username}"
                                TextColor="#252627"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>
                    <BoxView
                        Grid.Row="1"
                        HeightRequest="1"
                        WidthRequest="100"
                        Color="#BFC0C0" />
                    <StackLayout
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5,8,0,3"
                        Orientation="Horizontal"
                        WidthRequest="100">

                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Sign_Out" />
                        </StackLayout.GestureRecognizers>
                        <Image
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="15,0,0,0"
                            HeightRequest="65"
                            Source="ic_menu_logout.png"
                            VerticalOptions="Center"
                            WidthRequest="30" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            FontAttributes="Bold"
                            FontSize="13"
                            LineBreakMode="TailTruncation"
                            Text="{i18n:Translate Logout}"
                            TextColor="#252627"
                            VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="3"
                        Orientation="Horizontal"
                        WidthRequest="100">

                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Popup_Language" />
                        </StackLayout.GestureRecognizers>
                        <Image
                            Grid.Column="0"
                            Margin="20,0,0,0"
                            HeightRequest="30"
                            Source="language.png"
                            VerticalOptions="Center"
                            WidthRequest="30" />
                        <Label
                            Grid.Column="1"
                            Margin="3,0,0,0"
                            FontAttributes="Bold"
                            FontSize="13"
                            LineBreakMode="TailTruncation"
                            Text="Language"
                            TextColor="#252627"
                            VerticalOptions="Center" />
                    </StackLayout>
                    <BoxView
                        Grid.Row="4"
                        HeightRequest="1"
                        WidthRequest="100"
                        Color="#BFC0C0" />
                    <Grid Grid.Row="5" Grid.Column="0">
                        <ListView
                            Margin="5,8,5,5"
                            ItemsSource="{Binding MenuItems}"
                            SelectedItem="{Binding SelectedMenu, Mode=TwoWay}"
                            SeparatorVisibility="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <custom:CustomViewCell Height="45" SelectedItemBackgroundColor="#A0CCDA">
                                        <Grid VerticalOptions="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Image
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="15,0,0,0"
                                                HeightRequest="30"
                                                Source="{Binding MenuIcon}"
                                                VerticalOptions="Center"
                                                WidthRequest="30" />
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                FontAttributes="Bold"
                                                LineBreakMode="TailTruncation"
                                                Text="{Binding MenuName}"
                                                TextColor="{Binding Selected, Mode=TwoWay, Converter={StaticResource ColorConverter}}"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </custom:CustomViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Behaviors>
                                <eventToCommand:EventToCommandBehavior Command="{Binding MenuItemTapped}" EventName="ItemTapped" />
                            </ListView.Behaviors>
                        </ListView>

                    </Grid>

                </Grid>
            </RelativeLayout>
        </ContentPage>
    </MasterDetailPage.Master>

